<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="24dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/layoutCatAdoptionCardImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Cat Image"
            android:src="@drawable/cat_default"
            android:layout_alignParentStart="true"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
            />


        <TextView
            android:id="@+id/layoutCatAdoptionCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:paddingStart="24dp"
        />
        <TextView
            android:id="@+id/layoutCatAdoptionCardSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardName"
            android:gravity="center"
            android:paddingStart="24dp"
        />
        <TextView
            android:id="@+id/layoutCatAdoptionCardAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardSex"
            android:gravity="center"
            android:paddingStart="24dp"
        />
        <TextView
            android:id="@+id/layoutCatAdoptionCardBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardAge"
            android:gravity="center"
            android:paddingStart="24dp"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>