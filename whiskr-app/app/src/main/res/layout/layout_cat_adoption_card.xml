<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="28dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/layoutCatAdoptionCardImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="Cat Image"
            android:src="@drawable/cat_default"
            android:layout_alignParentStart="true"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
            android:layout_centerInParent="true"
        />

        <TextView
            android:id="@+id/layoutCatAdoptionCardId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:gravity="start"
            android:paddingStart="12dp"
            />
        <TextView
            android:id="@+id/layoutCatAdoptionCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardId"
            android:gravity="start"
            android:paddingStart="12dp"
        />
        <TextView
            android:id="@+id/layoutCatAdoptionCardSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardName"
            android:gravity="start"
            android:paddingStart="12dp"
        />
        <TextView
            android:id="@+id/layoutCatAdoptionCardAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardSex"
            android:gravity="start"
            android:paddingStart="12dp"
        />
        <TextView
            android:id="@+id/layoutCatAdoptionCardBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:layout_toEndOf="@+id/layoutCatAdoptionCardImage"
            android:layout_below="@+id/layoutCatAdoptionCardAge"
            android:gravity="start"
            android:paddingStart="12dp"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>